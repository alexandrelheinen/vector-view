names = ["history_iCub_fixed_l_hand"];
[dim1, dim2] = size(names);

while(1)
    // wait until the next confirmation
		halt('Press any key to the next loop.');
		for (k = 1:(dim1*dim2))
		  // data generated by the Sensor Plugin
		  data = fscanfMat(strcat([names(k), ".txt"]));
			// the plot
			subplot(dim1, dim2, k);
			// first column = time; second column = length
			plot(data(:,1), data(:,2));
		  set(gca(),'grid',[1 1]);
		  title(names(k));
		  xlabel('time (s)');
		  ylabel('force (magnitude) (N)');
		end
end
